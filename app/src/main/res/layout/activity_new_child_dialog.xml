<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.andstepko.teacher.NewChildDialogActivity">


    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/newChildNameEditText"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/newChildSurnameEditText"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/newChildNameEditText"
        android:layout_marginBottom="20dp"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/newChildAgeEditText"
        android:inputType="number"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/newChildSurnameEditText"
        android:layout_marginBottom="20dp"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/newChildRoomEditText"
        android:inputType="numberDecimal"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/newChildAgeEditText"
        android:layout_marginBottom="20dp"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/newChildGroupEditText"
        android:inputType="numberDecimal"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/newChildRoomEditText"
        android:layout_marginBottom="20dp"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:textSize="18sp"
        android:id="@+id/newChildRemarksEditText"
        android:layout_below="@+id/newChildGroupEditText"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="OK"
        android:textSize="22sp"
        android:id="@+id/newChildOkButton"
        android:layout_below="@+id/newChildRemarksEditText"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
